<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- Core initialization files - load first -->
    <Script file="init.lua"/>
    <Script file="defaults.lua"/>
    <Script file="media.lua"/>
    <Script file="atlas.lua"/>
    <Script file="core.lua"/>
    
    <!-- Core utilities -->
    <Script file="utils.lua"/>
    <Script file="event_optimization.lua"/>
    <Script file="performance.lua"/>
    <Script file="combat_performance.lua"/>
    <Script file="framerate_throttling.lua"/>
    <Script file="resource_cleanup.lua"/>
    <Script file="db_optimizer.lua"/>
    <Script file="database_optimization.lua"/>
    
    <!-- Module system - critical for module loading -->
    <Script file="module_template.lua"/>
    <Script file="module_api.lua"/>
    <Script file="module_init_api.lua"/>
    <Script file="module_manager.lua"/>
    <Script file="enhanced_module_system.lua"/>
    <Script file="dynamic_module_loading.lua"/>
    <Script file="module_icons.lua"/>
    
    <!-- Theme system - needed for appearance -->
    <Script file="theme_helpers.lua"/>
    <Script file="theme_integration.lua"/>
    <Script file="theme_editor.lua"/>
    <Script file="theme_switching_optimization.lua"/>
    <Script file="module_theme_integration.lua"/>
    <Script file="themes/colorblind.lua"/>
    <Script file="themes/highcontrast.lua"/>
    
    <!-- UI Framework - depends on theme system -->
    <Script file="UI.lua"/>
    <Script file="widgets.lua"/>
    <Script file="ui_scaling.lua"/>
    <Script file="font_integration.lua"/>
    <Script file="accessibility.lua"/>
    <Script file="keyboard_navigation.lua"/>
    
    <!-- Spell handling system -->
    <Script file="spell_data.lua"/>
    <Script file="spell_detection_optimization.lua"/>
    <Script file="spell_tracker.lua"/>
    <Script file="spell_tracker_integration.lua"/>
    
    <!-- Core Features -->
    <Script file="chat.lua"/>
    <Script file="player.lua"/>
    <Script file="audio_feedback.lua"/>
    <Script file="integration.lua"/>
    <Script file="dashboard.lua"/>
    
    <!-- Configuration - load after other systems -->
    <Script file="config.lua"/>
    <Script file="config_panel.lua"/>
    <Script file="config_ui.lua"/>
    <Script file="settings.lua"/>
    <Script file="database_config.lua"/>
    
    <!-- Skinning System - depends on theme system -->
    <Script file="Skins.lua"/>
    <Script file="BlizzardFrames.lua"/>
</Ui>