<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
    <!-- This file provides XML templates for the VUI Gfinder dialog -->
    
    <!-- Main dialog frame template -->
    <Frame name="VUIGfinderDialogTemplate" inherits="UIPanelDialogTemplate" virtual="true">
        <Size x="350" y="400"/>
        <Anchors>
            <Anchor point="TOPLEFT" relativePoint="TOPRIGHT" x="5" y="0" />
        </Anchors>
        <Frames>
            <!-- Minimize button -->
            <Button name="$parentMinimizeButton" parentKey="minimizeButton">
                <Size x="20" y="20"/>
                <Anchors>
                    <Anchor point="RIGHT" relativeKey="$parent.CloseButton" relativePoint="LEFT" x="-2" y="0"/>
                </Anchors>
                <ButtonText>
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="-1"/>
                    </Anchors>
                </ButtonText>
                <NormalFont style="GameFontNormal"/>
                <HighlightFont style="GameFontHighlight"/>
                <DisabledFont style="GameFontDisable"/>
                <NormalTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Up"/>
                <PushedTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Down"/>
                <HighlightTexture file="Interface\Buttons\UI-Panel-MinimizeButton-Highlight" alphaMode="ADD"/>
            </Button>
        </Frames>
    </Frame>
    
    <!-- Slider template for numeric ranges -->
    <Slider name="VUIGfinderSliderTemplate" orientation="HORIZONTAL" virtual="true" enableMouse="true" inherits="OptionsSliderTemplate">
        <Size x="320" y="17"/>
    </Slider>
    
    <!-- Checkbox template -->
    <CheckButton name="VUIGfinderCheckBoxTemplate" virtual="true" inherits="UICheckButtonTemplate">
        <Size x="24" y="24"/>
    </CheckButton>
    
    <!-- Dropdown template for selections -->
    <Frame name="VUIGfinderDropDownTemplate" virtual="true" inherits="UIDropDownMenuTemplate">
        <Size x="160" y="32"/>
    </Frame>
    
    <!-- Tab button template -->
    <Button name="VUIGfinderTabButtonTemplate" virtual="true" inherits="UIPanelButtonTemplate">
        <Size x="70" y="22"/>
    </Button>
    
    <!-- Action button template -->
    <Button name="VUIGfinderActionButtonTemplate" virtual="true" inherits="UIPanelButtonTemplate">
        <Size x="120" y="25"/>
    </Button>
</Ui>