<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <!-- Static Popup Templates for VUIGfinder -->
    
    <Script file="StaticPopup.lua"/>
    
    <!-- Basic Dialog Template -->
    <Frame name="VUIGfinderDialogTemplate" inherits="BackdropTemplate" virtual="true">
        <Size x="400" y="200"/>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\DialogFrame\UI-DialogBox-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="11" right="12" top="12" bottom="11"/>
            </BackgroundInsets>
            <TileSize>
                <AbsValue val="32"/>
            </TileSize>
            <EdgeSize>
                <AbsValue val="32"/>
            </EdgeSize>
        </Backdrop>
        <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parentTitleBG" file="Interface\DialogFrame\UI-DialogBox-Header">
                    <Size x="300" y="64"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="12"/>
                    </Anchors>
                </Texture>
                <FontString name="$parentTitle" inherits="GameFontNormal" text="Dialog Title">
                    <Anchors>
                        <Anchor point="TOP" relativeTo="$parentTitleBG" x="0" y="-14"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                <Anchors>
                    <Anchor point="TOPRIGHT" x="-3" y="-3"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
    
    <!-- Confirmation Dialog -->
    <Frame name="VUIGfinderConfirmationDialog" inherits="VUIGfinderDialogTemplate" hidden="true" parent="UIParent" frameStrata="DIALOG">
        <Size x="400" y="150"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" inherits="GameFontHighlight" justifyH="CENTER" text="Are you sure?">
                    <Size x="360" y="0"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-40"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <Button name="$parentYesButton" inherits="UIPanelButtonTemplate" text="YES">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM" x="-10" y="20"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        VUIGfinder.StaticPopups.ConfirmAction();
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentNoButton" inherits="UIPanelButtonTemplate" text="NO">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativePoint="BOTTOM" x="10" y="20"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
    
    <!-- Input Dialog -->
    <Frame name="VUIGfinderInputDialog" inherits="VUIGfinderDialogTemplate" hidden="true" parent="UIParent" frameStrata="DIALOG">
        <Size x="400" y="200"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" inherits="GameFontHighlight" justifyH="CENTER" text="Enter value:">
                    <Size x="360" y="0"/>
                    <Anchors>
                        <Anchor point="TOP" x="0" y="-40"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Frames>
            <EditBox name="$parentInput" autoFocus="true" inherits="InputBoxTemplate">
                <Size x="300" y="22"/>
                <Anchors>
                    <Anchor point="TOP" relativeTo="$parentText" relativePoint="BOTTOM" x="0" y="-15"/>
                </Anchors>
                <Scripts>
                    <OnEnterPressed>
                        VUIGfinder.StaticPopups.ConfirmInput(self:GetText());
                        self:GetParent():Hide();
                    </OnEnterPressed>
                    <OnEscapePressed>
                        self:GetParent():Hide();
                    </OnEscapePressed>
                </Scripts>
            </EditBox>
            <Button name="$parentOkButton" inherits="UIPanelButtonTemplate" text="OK">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT" relativePoint="BOTTOM" x="-10" y="20"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        VUIGfinder.StaticPopups.ConfirmInput(self:GetParent().Input:GetText());
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>
            <Button name="$parentCancelButton" inherits="UIPanelButtonTemplate" text="CANCEL">
                <Size x="100" y="22"/>
                <Anchors>
                    <Anchor point="BOTTOMLEFT" relativePoint="BOTTOM" x="10" y="20"/>
                </Anchors>
                <Scripts>
                    <OnClick>
                        self:GetParent():Hide();
                    </OnClick>
                </Scripts>
            </Button>
        </Frames>
    </Frame>
</Ui>