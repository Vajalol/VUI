<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
    <!-- UI Templates for VUIGfinder -->
    
    <!-- Basic Panel Template -->
    <Frame name="VUIGfinderPanelTemplate" inherits="BackdropTemplate" virtual="true">
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
            <EdgeSize>
                <AbsValue val="16"/>
            </EdgeSize>
        </Backdrop>
    </Frame>
    
    <!-- Header Template -->
    <Frame name="VUIGfinderHeaderTemplate" inherits="BackdropTemplate" virtual="true">
        <Size x="0" y="24"/>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Header" tile="true">
            <BackgroundInsets>
                <AbsInset left="5" right="5" top="5" bottom="5"/>
            </BackgroundInsets>
        </Backdrop>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" inherits="GameFontNormal" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
    
    <!-- Filter Item Template -->
    <Frame name="VUIGfinderFilterItemTemplate" virtual="true">
        <Size x="0" y="30"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentLabel" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="120" y="0"/>
                    <Anchors>
                        <Anchor point="LEFT" x="10" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
    
    <!-- Settings Option Template -->
    <Frame name="VUIGfinderSettingsOptionTemplate" virtual="true">
        <Size x="0" y="30"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentLabel" inherits="GameFontNormal" justifyH="LEFT">
                    <Anchors>
                        <Anchor point="LEFT" x="5" y="0"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>
    
    <!-- Filter Checkbox Template -->
    <CheckButton name="VUIGfinderCheckboxTemplate" inherits="UICheckButtonTemplate" virtual="true">
        <Size x="24" y="24"/>
    </CheckButton>
    
    <!-- Filter Slider Template -->
    <Slider name="VUIGfinderSliderTemplate" inherits="OptionsSliderTemplate" virtual="true">
        <Size x="200" y="16"/>
    </Slider>
    
    <!-- Filter Dropdown Template -->
    <Frame name="VUIGfinderDropdownTemplate" inherits="UIDropDownMenuTemplate" virtual="true">
        <Size x="160" y="16"/>
    </Frame>
    
    <!-- Filter Button Template -->
    <Button name="VUIGfinderButtonTemplate" inherits="UIPanelButtonTemplate" virtual="true">
        <Size x="120" y="22"/>
    </Button>
    
    <!-- Filter Tab Template -->
    <Button name="VUIGfinderTabTemplate" inherits="CharacterFrameTabButtonTemplate" virtual="true">
        <Size x="90" y="24"/>
        <Layers>
            <Layer level="OVERLAY">
                <FontString name="$parentText" inherits="GameFontNormalSmall" justifyH="CENTER">
                    <Anchors>
                        <Anchor point="CENTER" x="0" y="2"/>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Button>
    
    <!-- Group Entry Template -->
    <Button name="VUIGfinderGroupEntryTemplate" virtual="true">
        <Size x="0" y="40"/>
        <Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" tile="true">
            <BackgroundInsets>
                <AbsInset left="2" right="2" top="2" bottom="2"/>
            </BackgroundInsets>
            <Color r="0.1" g="0.1" b="0.1" a="0.5"/>
        </Backdrop>
        <Layers>
            <Layer level="ARTWORK">
                <FontString name="$parentName" inherits="GameFontNormal" justifyH="LEFT">
                    <Size x="0" y="16"/>
                    <Anchors>
                        <Anchor point="TOPLEFT" x="10" y="-8"/>
                        <Anchor point="TOPRIGHT" x="-10" y="-8"/>
                    </Anchors>
                </FontString>
                <FontString name="$parentInfo" inherits="GameFontHighlightSmall" justifyH="LEFT">
                    <Size x="0" y="16"/>
                    <Anchors>
                        <Anchor point="BOTTOMLEFT" x="10" y="8"/>
                        <Anchor point="BOTTOMRIGHT" x="-10" y="8"/>
                    </Anchors>
                </FontString>
                <Texture name="$parentRoleIcon" file="Interface\LFGFrame\UI-LFG-ICON-PORTRAITROLES">
                    <Size x="16" y="16"/>
                    <Anchors>
                        <Anchor point="TOPRIGHT" x="-8" y="-8"/>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="HIGHLIGHT">
                <Texture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD">
                    <Anchors>
                        <Anchor point="TOPLEFT" x="2" y="-2"/>
                        <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
                    </Anchors>
                    <Color r="1" g="1" b="1" a="0.3"/>
                </Texture>
            </Layer>
        </Layers>
        <HighlightTexture file="Interface\QuestFrame\UI-QuestTitleHighlight" alphaMode="ADD">
            <Anchors>
                <Anchor point="TOPLEFT" x="2" y="-2"/>
                <Anchor point="BOTTOMRIGHT" x="-2" y="2"/>
            </Anchors>
            <Color r="1" g="1" b="1" a="0.3"/>
        </HighlightTexture>
    </Button>
</Ui>